# Package name must match TOC so folder name is consistent for installs/updates
package-as: HorizonSuite

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown

# Exclude CI, config, and dev scripts from the packaged addon
ignore:
  - .github
  - .gitignore
  - .pkgmeta
  - scripts
  - docs
  - notes
  - "modules/*/notes"
  - pipeline.md
  - .cursor
  - .claude
  - .vscode
