# Beta package: installs as HorizonSuiteBeta for side-by-side with release
package-as: HorizonSuiteBeta

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown

# Exclude CI, config, and dev scripts from the packaged addon
ignore:
  - .github
  - .gitignore
  - .pkgmeta
  - scripts
  - docs
  - notes
  - "modules/*/notes"
  - pipeline.md
  - .cursor
  - .claude
  - .vscode
